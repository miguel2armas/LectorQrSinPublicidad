                    android:paddingEnd="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:background="@color/fond"
                    android:textColor="@color/white"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:id="@+id/codeupce"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="10dp">
                <ImageView
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/upce"/>
                <MultiAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Code UPC E"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:focusable="false"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_gravity="bottom"
                    android:background="@color/fond"
                    android:textColor="@color/white"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:id="@+id/codepdf417"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="10dp">
                <ImageView
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pdf417"/>
                <MultiAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Code PDF 417"
                    android:enabled="false"
                    android:focusable="false"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:background="@color/fond"
                    android:textColor="@color/white"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:id="@+id/rssexpanded"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="10dp">
                <ImageView
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rssexpanded"/>
                <MultiAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Code RSS EXP"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:focusable="false"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_gravity="bottom"
                    android:background="@color/fond"
                    android:textColor="@color/white"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:id="@+id/coderss14"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="10dp">
                <ImageView
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rrs14"/>
                <MultiAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Code RSS 14"
                    android:enabled="false"
                    android:focusable="false"
                    android:paddingStart="5dp"
